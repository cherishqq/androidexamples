<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:id="@+id/btnOpenBluetooth" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="打开蓝牙" />
	<Button android:id="@+id/btnCloseBluetooth"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="关闭蓝牙" />
	<Button android:id="@+id/btnDiscoveryBluetooth"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="发现蓝牙" />
	<Button android:id="@+id/btnSearchBluetooth"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="搜索蓝牙" />
	<Button android:id="@+id/btnClientSocket"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="客户端Socket" />
	<Button android:id="@+id/btnServerSocket"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="服务端Socket" />
	<Button android:id="@+id/btnOBEX"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="OBEX服务器" />

</LinearLayout>

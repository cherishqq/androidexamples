<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<EditText android:id="@+id/etMessageList"
		android:layout_width="fill_parent" android:layout_height="375dp"
		android:layout_marginTop="10dp" android:editable="false"
		android:gravity="left|bottom" />
	<RelativeLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		>
		<EditText android:id="@+id/etMessage" android:layout_width="260dp"
			android:layout_height="wrap_content" android:singleLine="true" />

		<Button android:id="@+id/btnSend" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="发送" android:layout_toRightOf="@id/etMessage"/>
	</RelativeLayout>
	

</LinearLayout>

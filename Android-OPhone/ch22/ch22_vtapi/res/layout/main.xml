<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <Button android:id="@+id/button_start"
        android:text="拨打视频电话"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/title_to"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_start"
        android:layout_alignTop="@id/button_start"
        android:paddingTop="20px"
        android:text="电话号:" />
	<EditText android:id="@+id/input_to"
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_to"
        android:layout_alignTop="@id/button_start"
		/>

    <Button android:id="@+id/button_stop"
        android:text="挂断视频电话"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/button_start"
        />
        
   <ScrollView
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:layout_below="@id/button_stop"
        android:paddingTop="10px"
        android:paddingBottom="10px"
	    >
		<TextView  
			android:id="@+id/textview_output"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
	
		    />
	</ScrollView>
	
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:id="@+id/button_search"
        android:text="搜索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        />
    <TextView android:id="@+id/title_word"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_search"
        android:layout_alignTop="@id/button_search"
        android:paddingTop="20px"
        android:text="关键字:" />
	<EditText android:id="@+id/input_word"
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_word"
        android:layout_alignTop="@id/button_search"
        android:text="CMCC"
		/>

   <ScrollView
		android:id="@+id/textview_scroll"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:layout_below="@id/button_search"
        android:paddingTop="10px"
        android:paddingBottom="10px"
	    >
	    <TextView  
			android:id="@+id/textview_output"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/hello"
		    />
	</ScrollView>
</RelativeLayout>

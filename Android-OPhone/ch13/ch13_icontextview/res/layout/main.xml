<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/net.blogjava.mobile"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<net.blogjava.mobile.widget.IconTextView
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="第一个笑脸" app:iconSrc="@drawable/small" app:iconPosition="left" />
	<net.blogjava.mobile.widget.IconTextView
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="第二个笑脸" android:textSize="24sp" app:iconSrc="@drawable/small"
		app:iconPosition="right" />
	<net.blogjava.mobile.widget.IconTextView
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="第三个笑脸" android:textSize="36sp" app:iconSrc="@drawable/small" />
	<net.blogjava.mobile.widget.IconTextView
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="第四个笑脸" android:textSize="48sp" app:iconSrc="@drawable/small"
		app:iconPosition="right" />
	<net.blogjava.mobile.widget.IconTextView
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="第五个笑脸" android:textSize="36sp" app:iconSrc="@drawable/small" />
	<net.blogjava.mobile.widget.IconTextView
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="第六个笑脸" android:textSize="24sp" app:iconSrc="@drawable/small"
		app:iconPosition="right" />
	<net.blogjava.mobile.widget.IconTextView
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="第七个笑脸" app:iconSrc="@drawable/small" />

</LinearLayout>  
               